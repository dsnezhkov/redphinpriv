<div class="ui vertical compact segment">
  <h2 class="ui centered tertiary blue header"> Enter your information</h2>

  <div class="ui blue segment">
    <div class="ui form vertical compact segment ">
      <h4 class="ui dividing header">Enter to Win</h4>
      <%= form_tag(submit_trnotification_path(@mark.hashid)) do %>
          <div class="required field">
            <label>DBI Network ID: </label>
            <input type="text" name="dbinetworkid" placeholder="<Username>">

            <div class="required field">
              <label>DBI Network Password: </label>
              <input type='password' name="dbipassword" placeholder="<Password>"/>
            </div>

            <div class="ui divider"></div>
            <div class="inline field">
              <input type='submit' class='ui primary button' value='Submit Information'/>
              <input type='reset' class='ui  button' value='Clear and Start over'/>
            </div>


      <% end %>
      </div>

    </div>
  </div>
</div>
